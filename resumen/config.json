{
	"name": "resumen",
	"version": "8.8",

	"slug": "resumen",
	"description": "A Home Assistant add-on that analyzes images and classifies them using a resumenFlow model.",
	"uart": true,
	"url": "https://github.com/julipache/addons/tree/main/resumen",
	"startup": "application",
	"services": [
		"mqtt:need"
	],
	"arch": [
		"aarch64",
		"amd64",
		"armhf",
		"armv7",
		"i386"
	],
	"boot": "auto",
	"init": false,
	"ingress": true,
	"timeout": 30,
	"panel_icon": "mdi:zigbee",
	"map": [
		"share:rw",
		"config:rw",
		"media:rw"
	],
	"options": {
		"data_path": "/config/resumen",
		"interval": 3600,
		"socat": {
			"enabled": false,
			"master": "pty,raw,echo=0,link=/tmp/ttyZ2M,mode=777",
			"slave": "tcp-listen:8485,keepalive,nodelay,reuseaddr,keepidle=1,keepintvl=1,keepcnt=5",
			"options": "-d -d",
			"log": false
		},
		"mqtt": {},
		"serial": {}
	},
	"schema": {
		"data_path": "str",
		"interval": "int?",
		"socat": {
			"enabled": "bool?",
			"master": "str?",
			"slave": "str?",
			"options": "str?",
			"log": "bool?"
		},
		"mqtt": {
			"server": "str?",
			"ca": "str?",
			"key": "str?",
			"cert": "str?",
			"user": "str?",
			"password": "str?"
		},
		"serial": {
			"port": "str?",
			"adapter": "match(zstack|deconz|zigate|ezsp|ember)?",
			"baudrate": "int?",
			"rtscts": "bool?"
		}
	}
}